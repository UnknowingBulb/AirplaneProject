@page
@model AirplaneProject.Pages.TicketAcquireModel

<h3>Купить билет</h3>

@if (Model.Error == TicketAcquireErrors.FlightInfoError)
{
    <div class="error-text">@Model.Error</div>
}
else
{
    <div>
        <h4>Рейс:</h4>
        <div>@Model.Flight.DepartureLocation - @Model.Flight.DestinationLocation</div>
        <div>Отправление в @Model.Flight.DepartureDateTime (UTC)</div>
        <div>Цена одного билета: @Model.Flight.Price</div>
    </div>
    <div>
        @if (Model.Error == TicketAcquireErrors.NoSeatsError)
        {
            <div class="error-text">@Model.Error</div>
        }
        else
        {
            <form method="post" asp-page-handler="ChangePassenger" asp-route-flightId="@Model.Flight.Id">
                @for (var srNumber = 0; srNumber < Model.SeatReserves.Count; srNumber++)
                {
                    <h6>Билет №@(srNumber + 1)</h6>
                    <input type="hidden" asp-for="SeatReserves[srNumber].Passenger.Id" />
                    <input type="hidden" asp-for="SeatReserves[srNumber].Passenger.UserId" />
                    <input type="hidden" asp-for="SeatReserves[srNumber].Id" />
                    <div class="row-columns">
                        <div class="column-names login-text">Место в самолете</div>
                        <select class="column-inputs login-input" asp-for="SeatReserves[srNumber].SeatNumber"
                                asp-items=@(new SelectList(Model.EmptySeatNumbers, Model.SeatReserves[srNumber].SeatNumber))></select>
                    </div>
                    <div>
                        <div class="column-names login-text">Выбрать сохраненного пассажира</div>
                        <select onchange="this.form.submit()" class="column-inputs login-input" asp-for="SeatReserves[srNumber].PassengerId"
                                asp-items=@(new SelectList(Model.UserPassengers
                    .Select(p => new {Id = p.Id, Name = p.Id == Guid.Empty ? "Добавить нового" : $"{p.Name} - {p.PassportData}"}),
                    "Id", "Name", Model.SeatReserves[srNumber].PassengerId))></select>
                    </div>
                    @if (Model.SeatReserves[srNumber].PassengerId == Guid.Empty)
                    {
                        <div class="column-names login-text">Добавить нового пассажира</div>
                        <div class="row-columns">
                            <div class="column-names login-text">ФИО пассажира</div>
                            <input class="column-inputs login-input" asp-for="SeatReserves[srNumber].Passenger.Name" />
                        </div>
                        <div class="row-columns">
                            <div class="column-names login-text">Серия и номер паспорта</div>
                            <input class="column-inputs login-input" asp-for="SeatReserves[srNumber].Passenger.PassportData" />

                        </div>
                    }


                }
                <button type="submit" asp-page-handler="AddTicket" asp-route-flightId="@Model.Flight.Id">Добавить билет</button>
                @if (Model.SeatReserves.Count > 0)
                {
                    <h5>
                        Общая стоимость: @(Model.Flight.Price * Model.SeatReserves.Count)
                    </h5>
                    <button type="submit" asp-page-handler="CompleteOrder" asp-route-flightId="@Model.Flight.Id">Оформить заказ</button>

                }
            </form>
        }
    </div>
}
<script>
    function PassSelectedValue(selectObject, index) {
        console.log(selectObject.value);
        console.log(index);
        if (selectObject == "00000000-0000-0000-0000-000000000000") {
            $("#NewPassengerInfo" + index).removeClass("hidden");
        }
        else {
            $("#NewPassengerInfo" + index).addClass("hidden");
        }
    }

    function UpdateValues(flightId) {

        console.log("21312");
        $.ajax({
            type: "POST",
            dataType: "application/x-www-form-urlencoded",
            url: 'https://localhost:44358/TicketAcquire?flightId=' + flightId + '&handler=ChangePassenger',
        });
    }
</script>