@page
@model AirplaneProject.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Заполните данные:</h3>

<form method="post" asp-page-handler="Registration">

    <div class="row-columns">
        <div class="column-names">Логин:</div>
        <input class="column-inputs" asp-for="User!.Login" />
    </div>

    <div class="row-columns">
        <div class="column-names">Пароль:</div>
        <input class="column-inputs" asp-for="User!.Password" />
    </div>

    <div class="row-columns">
        <div class="column-names">Фамилия Имя Отчество:</div>
        <input class="column-inputs" asp-for="User!.Name" />
    </div>

    <div class="row-columns">
        <div class="column-names">Номер телефона:</div>
        <input class="column-inputs" asp-for="User!.PhoneNumber" />
    </div>
    <input type="submit" value="Подтвердить" />
</form>
<span align="left" class="error-text">@Html.ValidationMessage("RegistrationError")</span>